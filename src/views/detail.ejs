<!DOCTYPE html>
<html>
    <%- include('partials/head') %> 
    <body>
        <%- include('partials/headerNavbar') %>
        <main>
            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Estas viendo el producto <%= producto.name %></h2>
                    </div>
                
        
                        <div>
                            <section class="product-box">
                                <a href="/producto/<%= producto.id %>">
                                    <figure class="product-box_image">
                                        <img src="/images/productos/<%= producto.image %>" alt="imagen de producto">
                                    </figure>
                                    <article class="description">
                                        <h2>$<%= producto.price %></h2>
                                        <span><%= producto.type %></span>
                                        <p><%= producto.name %></p>
                                        <p><%= producto.description %></p>
                                    </article>
                                    <a href="#" class="buy-button">Comprar</a>

                                    <a href="/producto/edit/<%= producto.id %>" class="edit-button">Editar producto</a>
                                    <form action="/producto/delete/id?_method=DELETE" method="POST">
                                        <button type="submit" class="delete-button">Eliminar</button>
                                    </form>
                                </a>
                            </section>
                        </div>
            
                
                </div>
            </div>
        </main>
        <%- include('partials/footer') %>      
    </body>
</html>